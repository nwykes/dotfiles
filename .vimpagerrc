let mapleader = ","

set nocompatible
set encoding=utf-8
set hidden
filetype off

set rtp+=~/.vim/bundle/Vundle.vim/
call vundle#rc()

Plugin 'gmarik/Vundle.vim'

if filereadable(expand("~/.vimpagerrc.bundles.local"))
  source ~/.vimpagerrc.bundles.local
endif

filetype plugin indent on

syntax on

set background=dark
colorscheme base16-tomorrow
set number
